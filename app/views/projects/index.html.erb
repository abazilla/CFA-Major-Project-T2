<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Projects</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Pitch</th>
        <th>Request amount</th>
        <th>Funded amount</th>
        <th>Funded</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.pitch %></td>
          <td><%= project.request_amount %></td>
          <td><%= project.funded_amount %></td>
          <td><%= project.funded %></td>
          <td><%= project.user.email %></td>
          <td><%= link_to 'Show', project %></td>
          <td><%= link_to 'Donate', new_project_donation_path(project.id), class:'btn btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Project', new_project_path %>
</div>