
<p id="notice"><%= notice %></p>

<h1>Admin Dashboard</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Pitch</th>
      <th>Request amount</th>
      <th>Funded amount</th>
      <th>Funded</th>
      <th>User</th>
      <th>Next project funded</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.pitch %></td>
        <td><%= project.request_amount %></td>
        <td><%= project.funded_amount %></td>
        <td><%= project.funded %></td>
        <td><%= project.user %></td>
        <td><%= project.next_project_funded %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>