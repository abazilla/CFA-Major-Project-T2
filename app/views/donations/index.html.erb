<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Donations</h1>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Project</th>
        <th>Amount</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @donations.each do |donation| %>
        <tr>
          <td><%= donation.user.email %></td>
          <td><%= donation.project.title %></td>
          <td><%= number_to_currency(donation.amount) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>