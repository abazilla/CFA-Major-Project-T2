<div class="login">
  <div class="container login-card">
    <div class="card box-shadow registration-card" style="width: 20rem;">
      <div class="card-block">
        <h1 class="card-title registration-title"><center>Log In</center></h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <form>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class:'form-control searchbar-input' %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class:'form-control searchbar-input' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <center><%= f.submit "Log In", class: 'btn large-shadow-btn'%></center>
          </div>
        <% end %>
       </form>
       <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
